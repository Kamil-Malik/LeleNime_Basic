<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_anime_navigation"
    app:startDestination="@id/nav_detail_anime">
    <fragment
        android:id="@+id/nav_detail_anime"
        android:name="com.lelestacia.lelenimexml.feature_anime.ui.detail_anime.DetailAnimeFragment"
        android:label="Detail Anime"
        tools:layout="@layout/fragment_detail_anime">
        <argument
            android:name="anime"
            app:argType="com.lelestacia.lelenimexml.feature_anime.domain.model.Anime" />
        <action
            android:id="@+id/get_character_detail"
            app:destination="@id/fragmentCharacterBottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/fragmentCharacterBottomSheet"
        android:name="com.lelestacia.lelenimexml.feature_anime.ui.character_bottom_sheet.FragmentCharacterBottomSheet"
        android:label="fragment_character_bottom_sheet"
        tools:layout="@layout/fragment_character_bottom_sheet" >
        <argument
            android:name="character_id"
            app:argType="integer" />
    </dialog>
</navigation>