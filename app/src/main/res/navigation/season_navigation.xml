<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/season_navigation"
    app:startDestination="@id/nav_season_anime">
    <fragment
        android:id="@+id/nav_detail_anime"
        android:name="com.lelestacia.lelenimexml.feature_anime.ui.view.DetailAnimeFragment"
        android:label="Detail Anime"
        tools:layout="@layout/fragment_detail_anime">
        <argument
            android:name="anime"
            app:argType="com.lelestacia.lelenimexml.feature_anime.domain.model.Anime" />
    </fragment>
    <fragment
        android:id="@+id/nav_season_anime"
        android:name="com.lelestacia.lelenimexml.feature_anime.ui.view.currently_airing.SeasonAnimeFragment"
        android:label="Currently Airing"
        tools:layout="@layout/fragment_season_anime">
        <action
            android:id="@+id/season_to_detail"
            app:destination="@id/nav_detail_anime"
            app:launchSingleTop="false" />
    </fragment>
</navigation>