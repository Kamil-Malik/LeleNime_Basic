<resources>
    <!-- Base application theme. -->
    <style name="Theme.LeleNimeXML" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">#1C1C1C</item>



        <item name="cardBackgroundColor">@color/navy</item>
        <item name="background">@color/beige</item>
        <item name="colorOnSurfaceVariant">@color/orange</item>

        <item name="indicatorColor">@color/navy</item>

        <item name="trackColor">#1C1C1C</item>


        <item name="thumbTint">@color/blue</item>



        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.LeleNimeXML.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LeleNimeXML.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LeleNimeXML.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>